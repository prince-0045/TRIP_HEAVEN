<% layout('/layouts/boilerplate') %>

<div class="container-fluid">
    <!-- Profile Header Section -->
    <div class="profile-header scroll-reveal">
        <div class="profile-header-card">
            <div class="profile-avatar-section">
                <div class="profile-avatar-large">
                    <i class="fas fa-user"></i>
                </div>
                <div class="profile-info">
                    <h1 class="profile-name"><%= user.username %></h1>
                    <p class="profile-email"><%= user.email %></p>
                    <% if (user.createdAt) { %>
                        <p class="profile-joined">Member since <%= new Date(user.createdAt).toLocaleDateString() %></p>
                    <% } %>
                </div>
            </div>
            <div class="profile-stats">
                <div class="stat-item">
                    <div class="stat-number"><%= userListings.length %></div>
                    <div class="stat-label">Listings</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= userReviews ? userReviews.length : 0 %></div>
                    <div class="stat-label">Reviews</div>
                </div>
            </div>
        </div>
    </div>

    <!-- User's Listings Section -->
    <div class="user-listings-section scroll-reveal">
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-home"></i>
                My Listings
            </h2>
            <p class="section-subtitle">Manage your property listings</p>
        </div>

        <% if (userListings && userListings.length > 0) { %>
            <div class="listings-grid">
                <% for (let listing of userListings) { %>
                    <div class="listing-card user-listing-card">
                        <div class="card-image-container">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                            <div class="card-img-overlay"></div>
                            <div class="listing-actions-overlay">
                                <a href="/listings/<%= listing._id %>/edit" class="edit-btn-small">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="delete-form-small">
                                    <button type="submit" class="delete-btn-small" onclick="return confirm('Are you sure you want to delete this listing?')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="listing-header">
                                <h3 class="listing-title-small"><%= listing.title %></h3>
                                <span class="listing-price">â‚¹<%= listing.price.toLocaleString("en-IN") %>/night</span>
                            </div>
                            <div class="listing-meta">
                                <span class="meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <%= listing.location %>
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-calendar"></i>
                                    <%= new Date(listing.createdAt).toLocaleDateString() %>
                                </span>
                            </div>
                            <div class="listing-actions">
                                <a href="/listings/<%= listing._id %>" class="view-btn">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="empty-listings">
                <div class="empty-icon">
                    <i class="fas fa-home"></i>
                </div>
                <h3>No Listings Yet</h3>
                <p>You haven't created any listings yet. Start by adding your first property!</p>
                <a href="/listings/new" class="action-btn primary">
                    <i class="fas fa-plus"></i>
                    Create Your First Listing
                </a>
            </div>
        <% } %>
    </div>

    <!-- User's Reviews Section (if any) -->
    <% if (userReviews && userReviews.length > 0) { %>
        <div class="user-reviews-section scroll-reveal">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-star"></i>
                    My Reviews
                </h2>
                <p class="section-subtitle">Reviews you've written</p>
            </div>
            
            <div class="reviews-grid">
                <% for (let review of userReviews) { %>
                    <div class="review-card user-review-card">
                        <div class="review-header">
                            <div class="review-rating">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= review.rating ? 'star-filled' : 'star-empty' %>"></i>
                                <% } %>
                            </div>
                            <span class="review-date"><%= new Date(review.createdAt).toLocaleDateString() %></span>
                        </div>
                        <div class="review-content">
                            <p class="review-comment"><%= review.comment %></p>
                            <div class="review-listing">
                                <i class="fas fa-home"></i>
                                <span>For: <%= review.listing ? review.listing.title : 'Unknown Listing' %></span>
                            </div>
                        </div>
                        <div class="review-actions">
                            <a href="/listings/<%= review.listing ? review.listing._id : '#' %>" class="view-listing-btn">
                                View Listing
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>
</div>
