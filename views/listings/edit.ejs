<% layout('/layouts/boilerplate') %>

<div class="container-fluid px-4">
    <div class="form-container">
        <h3 class="form-title scroll-reveal">Edit Your Listing</h3>
        
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="listing-form scroll-reveal" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-input" required>
            </div>
            
            <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" class="form-input" rows="4" required><%= listing.description %></textarea>
            </div>
            
            <div class="form-group">
                <label class="form-label">Original Listing Image</label>
                <div class="original-image">
                    <img src="<%= originalImage %>" alt="Original listing image" class="preview-image">
                </div>
            </div>

            <div class="form-group">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" name="listing[image]" id="image" class="form-input file-input">
            </div>

            <div class="form-group">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" id="category" class="form-input" required>
                    <option disabled value="">Select a category...</option>
                    <option value="trending" <%= listing.category === 'trending' ? 'selected' : '' %>>Trending</option>
                    <option value="rooms" <%= listing.category === 'rooms' ? 'selected' : '' %>>Rooms</option>
                    <option value="iconicCity" <%= listing.category === 'iconicCity' ? 'selected' : '' %>>Iconic City</option>
                    <option value="mountain" <%= listing.category === 'mountain' ? 'selected' : '' %>>Mountain</option>
                    <option value="castle" <%= listing.category === 'castle' ? 'selected' : '' %>>Castle</option>
                    <option value="swimmingPool" <%= listing.category === 'swimmingPool' ? 'selected' : '' %>>Swimming Pool</option>
                    <option value="camping" <%= listing.category === 'camping' ? 'selected' : '' %>>Camping</option>
                    <option value="farms" <%= listing.category === 'farms' ? 'selected' : '' %>>Farms</option>
                    <option value="artic" <%= listing.category === 'artic' ? 'selected' : '' %>>Artic</option>
                    <option value="domes" <%= listing.category === 'domes' ? 'selected' : '' %>>Domes</option>
                    <option value="sailboat" <%= listing.category === 'sailboat' ? 'selected' : '' %>>Sailboat</option>
                </select>
            </div>
            
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" id="price" value="<%= listing.price %>" class="form-input" required>
                </div>
                
                <div class="form-group col-sm-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="location" value="<%= listing.location %>" class="form-input" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="country" value="<%= listing.country %>" class="form-input" required>
            </div>
            
            <button type="submit" class="submit-btn">
                <i class="fas fa-edit"></i> Update Listing
            </button>
        </form>
    </div>
</div>