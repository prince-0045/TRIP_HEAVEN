<% layout("/layouts/boilerplate") %>

<div class="container-fluid px-4">
    <div class="form-container">
        <h3 class="form-title scroll-reveal">Create New Listing</h3>
        
        <form action="/listings" method="post" class="listing-form scroll-reveal" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" id="title" placeholder="Enter Title" class="form-input" required>
            </div>
            
            <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" placeholder="Enter the description" class="form-input" rows="4" required></textarea>
            </div>
        
            <div class="form-group">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" id="image" class="form-input file-input" required>
            </div>

            <div class="form-group">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" id="category" class="form-input" required>
                    <option selected disabled value="">Select a category...</option>
                    <option value="trending">Trending</option>
                    <option value="rooms">Rooms</option>
                    <option value="iconicCity">Iconic City</option>
                    <option value="mountain">Mountain</option>
                    <option value="castle">Castle</option>
                    <option value="swimmingPool">Swimming Pool</option>
                    <option value="camping">Camping</option>
                    <option value="farms">Farms</option>
                    <option value="artic">Artic</option>
                    <option value="domes">Domes</option>
                    <option value="sailboat">Sailboat</option>
                </select>
            </div>
            
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]" id="price" placeholder="Enter Price" class="form-input" required>
                </div>
                
                <div class="form-group col-sm-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="location" placeholder="Enter Location" class="form-input" required>
                </div>
            </div>

            <div class="form-group">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="country" placeholder="Enter Country" class="form-input" required>
            </div>
            
            <button type="submit" class="submit-btn">
                <i class="fas fa-plus"></i> Create Listing
            </button>
        </form>
    </div>
</div>